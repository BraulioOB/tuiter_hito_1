<div class="flex justify-around pt-10">
    <% if @page > 0 %>
        <%= link_to tweets_path(page: @page - 1) do %>
            <span class="p-3 px-10 text-gray-800  hover:bg-indigo-400 hover:text-white rounded-md">tweets anteriores</span>
        <% end %>
    <% end %>

    <% if (@page + 1) < @pages %>
        <%= link_to tweets_path(page: @page + 1) do %>
            <span class="p-3 px-10 text-gray-800 bg-gray-100 hover:bg-blue-400 hover:text-white rounded-md">mostrar m√°s tweets</span>
        <% end %>
    <% end %>   
</div>