<%# action buttons %>
<div class="flex space-y-12 mb-14">
    <div class="flex flex-col ml-5 mr-8 space-y-1">

        <div class="flex">
            <div class="button-action-side">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <span class="text-xl select-none">Inicio</span>
            </div>
        </div>

        <div class="flex">
            <div class="button-action-side">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                </svg>
                <span class="text-xl select-none">Explorar</span>
            </div>
        </div>

        <div class="flex">
            <div class="button-action-side">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="text-xl select-none">Perfil</span>
            </div>
        </div>

    </div>
    
</div>

<%# new tweet %>
<div class="mr-8">
    <%= link_to new_tweet_path do %>
        <div class="block transition delay-75 ease-in-out bg-blue-500 hover:bg-blue-600 text-center py-3 rounded-full text-white shadow-lg font-bold">Tuittear</div>    
    <% end %>
</div>

<%# current user component %>
<div class="flex flex-row mt-10 rounded-full bg-gray-100 hover:bg-gray-300 justify-between transition delay-75 ease-in-out">
    <span class="my-auto mx-5 text-sm font-medium text-gray-500 hover:text-black"><%= link_to "Salir", destroy_user_session_path, method: :delete %></span>
    
    <div class="text-left my-auto">
        <span class="font-bold">@<%= current_user.account %></span>
        <span class="text-xs"><%= current_user.email %></span>
    </div>

    <%= link_to edit_user_registration_path do %>
        <div class="bg-cover bg-center rounded-full h-12 w-12 m-2 transition delay-75 ease-in-out hover:shadow-lg" style="background-image: url(<%= user.profile_picture %>)"></div>
    <% end %>
    
</div>