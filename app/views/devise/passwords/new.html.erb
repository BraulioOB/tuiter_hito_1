<div class="flex h-full bg-gray-700 bg-opacity-40">
  <div class="bg-white w-3/6 max-w-md m-auto py-6 px-10 rounded-md shadow-lg">
    <h2 class="tuiter-title-md">¿Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mt-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "tuiter-form" %>
      </div>

      <div class="actions">
        <%= f.submit "Envíame instruciones por correo", class: "tuiter-button mt-5" %>
      </div>
    <% end %>

    <div class="text-sm text-gray-700 flex justify-between mx-auto w-5/6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
